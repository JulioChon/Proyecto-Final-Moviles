<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_viaje"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imagen_viaje"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prueba"
            android:textColor="@color/black"
            android:id="@+id/titulo_viaje"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imagen_viaje"
            android:layout_toRightOf="@id/imagen_viaje"
            android:layout_alignParentTop="true"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/detalle_viaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_viaje"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imagen_viaje"
            android:layout_toRightOf="@id/imagen_viaje"
            android:text="estos son los detalles"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>